<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LogicSimulator.Controls">
    <Style TargetType="{x:Type local:Window}">
        <Setter Property="MinWidth" Value="300" />
        <Setter Property="MinHeight" Value="300" />
        <Setter Property="WindowStyle" Value="SingleBorderWindow" />
        <Setter Property="ResizeMode" Value="CanResize" />
        <Setter Property="AllowsTransparency" Value="False" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="White" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    CaptionHeight="27"
                    CornerRadius="0"
                    GlassFrameThickness="0"
                    NonClientFrameEdges="None"
                    ResizeBorderThickness="7, 3, 7, 7" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Window}">
                    <Border x:Name="PART_Border">
                        <DockPanel>
                            <Grid
                                x:Name="Grid"
                                Height="29"
                                HorizontalAlignment="Stretch"
                                Background="#474747"
                                DockPanel.Dock="Top">

                                <!--  Icon  -->
                                <Image
                                    x:Name="Icon"
                                    Margin="7,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Source="{TemplateBinding Icon}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" />

                                <!--  Title  -->
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="{TemplateBinding Title}" />

                                <!--  Buttons  -->
                                <Grid
                                    x:Name="ButtonsGrid"
                                    Width="138"
                                    Height="22"
                                    Margin="0,0,7,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    WindowChrome.IsHitTestVisibleInChrome="True">
                                    <Grid.Resources>
                                        <ResourceDictionary>
                                            <Style x:Key="BaseButtonStyle" TargetType="{x:Type Button}">
                                                <Setter Property="Focusable" Value="False" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Grid Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                            <Style
                                                x:Key="OtherButtonStyle"
                                                BasedOn="{StaticResource BaseButtonStyle}"
                                                TargetType="{x:Type Button}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#6283A2" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                            <Style
                                                x:Key="CloseButtonStyle"
                                                BasedOn="{StaticResource BaseButtonStyle}"
                                                TargetType="{x:Type Button}">
                                                <Setter Property="Background" Value="#A00000" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C00000" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ResourceDictionary>
                                    </Grid.Resources>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Button
                                        x:Name="PART_MinimizeButton"
                                        Grid.Column="0"
                                        Style="{StaticResource OtherButtonStyle}">
                                        <Path
                                            Data="M0,8 H8 M0,7 H8 M0,6 H8"
                                            RenderOptions.EdgeMode="Aliased"
                                            Stretch="None"
                                            Stroke="White"
                                            StrokeThickness="1" />
                                    </Button>

                                    <Button
                                        x:Name="PART_MaximizeButton"
                                        Grid.Column="1"
                                        Style="{StaticResource OtherButtonStyle}">
                                        <Path
                                            x:Name="MaximizeButtonData"
                                            Data="M0,0 H8 V8 H0 V0 M0,1 H8 M0,2 H8"
                                            RenderOptions.EdgeMode="Aliased"
                                            Stretch="None"
                                            Stroke="White"
                                            StrokeThickness="1" />
                                    </Button>

                                    <Button
                                        x:Name="PART_CloseButton"
                                        Grid.Column="2"
                                        Style="{StaticResource CloseButtonStyle}">
                                        <Path
                                            Data="M0,0 L8,8 M0,8 L8,0"
                                            Stretch="None"
                                            Stroke="White"
                                            StrokeThickness="1.5" />
                                    </Button>
                                </Grid>
                            </Grid>
                            <Border
                                x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#474747"
                                BorderThickness="7,0,7,7">
                                <!--  Window content  -->
                                <ContentPresenter />
                            </Border>
                        </DockPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="Border" Property="BorderThickness" Value="0" />
                            <Setter TargetName="Grid" Property="Height" Value="22" />
                            <Setter TargetName="MaximizeButtonData" Property="Data" Value="M0,3 H5 V8 H0 V3 M0,4 H5 M3,0 H8 V5 H7 M3,1 H8" />
                            <Setter TargetName="Icon" Property="Margin" Value="0" />
                            <Setter TargetName="ButtonsGrid" Property="Margin" Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>