<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:o="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:r="clr-namespace:LogicSimulator.Controls.Themes">

    <!--#region Button style brushes-->

    <SolidColorBrush
        x:Key="{x:Static r:ResourceKeys.ButtonBackgroundBrush}"
        o:Freeze="True"
        Color="White" />

    <SolidColorBrush
        x:Key="{x:Static r:ResourceKeys.ButtonBorderBrush}"
        o:Freeze="True"
        Color="#B2B2B2" />

    <SolidColorBrush
        x:Key="{x:Static r:ResourceKeys.ButtonForegroundBrush}"
        o:Freeze="True"
        Color="Black" />

    <SolidColorBrush
        x:Key="{x:Static r:ResourceKeys.ButtonMouseOverBackgroundBrush}"
        o:Freeze="True"
        Color="#807D7D" />

    <SolidColorBrush
        x:Key="{x:Static r:ResourceKeys.ButtonPressedBackgroundBrush}"
        o:Freeze="True"
        Color="#505050" />

    <SolidColorBrush
        x:Key="{x:Static r:ResourceKeys.ButtonPressedBorderBrush}"
        o:Freeze="True"
        Color="#A2D2FD" />

    <!--#endregion-->

</ResourceDictionary>