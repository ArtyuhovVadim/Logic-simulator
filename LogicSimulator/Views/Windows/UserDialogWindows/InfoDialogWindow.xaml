<c:Window
    x:Class="LogicSimulator.Views.Windows.UserDialogWindows.InfoDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:LogicSimulator.Controls;assembly=LogicSimulator.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:r="clr-namespace:LogicSimulator.Controls.Themes;assembly=LogicSimulator.Controls"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    Title="{Binding Path=Title}"
    Width="450"
    Height="250"
    MinWidth="100"
    MinHeight="100"
    DataContext="{Binding Path=InfoDialogWindowViewModel, Source={StaticResource Locator}}"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource {x:Static r:ResourceKeys.UserDialogWindowBackground}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Ellipse
                Grid.Column="0"
                Margin="5"
                Fill="White" />
            <fa:ImageAwesome
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="#357CC5"
                Icon="InfoCircle" />
            <TextBlock
                Grid.Column="1"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="18"
                Text="Info" />
        </Grid>
        <TextBox
            Grid.Row="1"
            Margin="10,0"
            HorizontalScrollBarVisibility="Hidden"
            IsReadOnly="True"
            Text="{Binding Path=Message}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <Button
            Grid.Row="2"
            Margin="10"
            Padding="20,3"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Command="{Binding Path=ConfirmCommand}"
            Content="OK"
            IsDefault="True" />
    </Grid>
</c:Window>
