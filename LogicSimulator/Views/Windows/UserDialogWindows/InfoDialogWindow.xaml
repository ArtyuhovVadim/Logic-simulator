<c:Window
    x:Class="LogicSimulator.Views.Windows.UserDialogWindows.InfoDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:LogicSimulator.Controls;assembly=LogicSimulator.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LogicSimulator.Views.Windows.UserDialogWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Info"
    Width="450"
    Height="250"
    MinWidth="100"
    MinHeight="100"
    DataContext="{Binding Path=InfoDialogWindowViewModel, Source={StaticResource Locator}}"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid Background="#404040">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            Margin="10,10,10,0"
            HorizontalScrollBarVisibility="Hidden"
            IsReadOnly="True"
            Text="{Binding Path=Message}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <Button
            Grid.Row="1"
            Width="50"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            Command="{Binding Path=OkButtonClickedCommand}"
            Content="OK"
            IsDefault="True" />
    </Grid>
</c:Window>
