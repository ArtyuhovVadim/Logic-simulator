<c:Window
    x:Class="LogicSimulator.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:LogicSimulator.Controls;assembly=LogicSimulator.Controls"
    xmlns:con="clr-namespace:LogicSimulator.Infrastructure.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="clr-namespace:LogicSimulator.Scene;assembly=LogicSimulator.Scene"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Logic-simulator"
    Width="1280"
    Height="720"
    DataContext="{Binding Path=MainWindowViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <c:Window.Resources>
        <con:Vector2Converter x:Key="Vector2Converter" />
    </c:Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Новый" />
                <MenuItem Command="{Binding Path=LoadExampleCommand}" Header="Загрузить пример" />
                <MenuItem Command="{Binding Path=SaveExampleCommand}" Header="Сохранить пример" />
                <Separator />
                <MenuItem Header="Выход" />
            </MenuItem>
        </Menu>

        <StatusBar Background="#424242" DockPanel.Dock="Bottom">
            <TextBlock
                Margin="0,0,5,0"
                Foreground="White"
                Text="{Binding Path=Scale, ElementName=Scene, StringFormat='Масштаб: {0:0.00}'}" />
            <TextBlock Foreground="White" Text="{Binding Path=MousePosition, ElementName=Scene, StringFormat='Позиция курсора: {0}', Converter={StaticResource Vector2Converter}}" />
        </StatusBar>

        <DockingManager>
            <LayoutRoot>
                <LayoutPanel Orientation="Horizontal">
                    <LayoutDocumentPaneGroup>
                        <LayoutDocumentPane x:Name="LayoutDocumentPane">
                            <LayoutDocument
                                Title="Test scene"
                                CanClose="False"
                                CanFloat="False">
                                <s:Scene2D
                                    x:Name="Scene"
                                    Components="{Binding Path=RenderingComponents}"
                                    Objects="{Binding Path=Objects}"
                                    Tools="{Binding Path=Tools}" />
                            </LayoutDocument>
                        </LayoutDocumentPane>
                    </LayoutDocumentPaneGroup>
                    <LayoutAnchorablePaneGroup DockWidth="300">
                        <LayoutAnchorablePane>
                            <LayoutAnchorable Title="Properties" CanClose="False">
                                <xctk:PropertyGrid SelectedObject="{Binding Path=SelectedObjects[0]}" />
                            </LayoutAnchorable>
                        </LayoutAnchorablePane>
                    </LayoutAnchorablePaneGroup>
                </LayoutPanel>
            </LayoutRoot>
        </DockingManager>
    </DockPanel>
</c:Window>
