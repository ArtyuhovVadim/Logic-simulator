<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net7.0-windows</TargetFramework>
        <Nullable>disable</Nullable>
        <UseWPF>true</UseWPF>
        <Platforms>x64;x86</Platforms>
        <StartupObject>LogicSimulator.Program</StartupObject>
        <LangVersion>latest</LangVersion>
        <ApplicationIcon>Icons\icon512x512.ico</ApplicationIcon>
	    <VersionPrefix>0.2.0</VersionPrefix>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Icons\icon512x512.png" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="Icons\icon512x512.ico" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\LogicSimulator.AvalonDock\LogicSimulator.AvalonDock.csproj" />
        <ProjectReference Include="..\LogicSimulator.Controls\LogicSimulator.Controls.csproj" />
        <ProjectReference Include="..\LogicSimulator.Scene\LogicSimulator.Scene.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="app-settings.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="Data\Example.lss">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Infrastructure\Converters\" />
        <Folder Include="Models\" />
        <Folder Include="Models\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="FontAwesome.WPF" Version="4.7.0.9" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.0" />
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="7.0.0" />
        <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
        <PackageReference Include="YamlDotNet" Version="12.0.2" />
    </ItemGroup>

    <ItemGroup>
      <Resource Include="Icons\icon512x512.png" />
    </ItemGroup>

</Project>
